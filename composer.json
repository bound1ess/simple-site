{
	"name": "bound1ess/simple-site",
	"description": "Playing with Laravel 5.",
	"license": "MIT",
	"type": "project",

	"require": {
		"laravel/framework": "5.0.*"
	},

	"require-dev": {
		"phpunit/phpunit": "~4.5",
		"bound1ess/essence": "~1.4",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~0.9"
	},

	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Frostbite\\": "app/"
		},
        "files": [
            "app/Misc/helpers.php"
        ]
	},

	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	}
}
